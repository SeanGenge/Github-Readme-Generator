<div class="container">
    <div class="row custom-row">
        <div class="col-md-6 col-sm-12">
            <div class="info">
                {{> info}}
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <form id="readme-form">
                <div id="section-container">
                    {{#each sections as |section|}}
                        {{> sectionCard section=section sectionTypes=../SectionTypes}}
                    {{/each}}
                </div>
                <button type="submit" class="btn btn-primary float-end" id="generate-readme">Generate Readme</button>
            </form>
        </div>
    </div>
</div>